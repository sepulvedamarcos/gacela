Private $log4Gambas As Log4Gambas3
Private $photoRepository As PhotoRepository
Private $photos As PhotoEntity[]

Public Sub _new(logger As Log4Gambas3, repository As PhotoRepository)

  $log4Gambas = logger
  $log4Gambas.Debug("en formulario")

  $photoRepository = repository
  $photos = $photoRepository.getPhotos()

End

Public Sub Form_Open()

  Dim photo As PhotoEntity
  Dim PanelPhoto As Panel
  Dim formphoto As FPhoto

  $log4Gambas.Debug("en formulario open")

  For Each photo In $photos
    PanelPhoto = New Panel(PanelDespliegue)
    PanelPhoto.Width = 180
    PanelPhoto.Height = 180
    PanelPhoto.Border = Border.Solid
    PanelPhoto.Background = Color.Blue
    PanelPhoto.Show()

    formphoto = New FPhoto(photo, PanelPhoto)

  Next

End

Public Sub Form_Show()

  $log4Gambas.Debug("en formulario show")

End

